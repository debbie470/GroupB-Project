@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<div class="flip-card-container">
    <div class="flip-card">
        <div class="flip-card-inner">
            <div class="flip-card-front">
                <h3>Data Protection</h3>
            </div>
            <div class="flip-card-back">
                <p>We ensure your data is securely stored and handled according to industry standards.</p>
            </div>
        </div>
    </div>

    <div class="flip-card">
        <div class="flip-card-inner">
            <div class="flip-card-front">
                <h3>Encrypted Storage</h3>
            </div>
            <div class="flip-card-back">
                <p>All sensitive information is encrypted to prevent unauthorized access.</p>
            </div>
        </div>
    </div>

    <div class="flip-card">
        <div class="flip-card-inner">
            <div class="flip-card-front">
                <h3>Transparency</h3>
            </div>
            <div class="flip-card-back">
                <p>We are open about how your data is collected, used, and protected.</p>
            </div>
        </div>
    </div>

    <div class="flip-card">
        <div class="flip-card-inner">
            <div class="flip-card-front">
                <h3>Your Rights</h3>
            </div>
            <div class="flip-card-back">
                <p>You have full control over your data, including access, correction, and deletion rights.</p>
            </div>
        </div>
    </div>
</div>
